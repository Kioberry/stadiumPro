<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@drawable/corners_new_thme_shape"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingRight="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/imgLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/imgTitleTv"
                android:layout_width="14dp"
                android:maxHeight="80dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="你是最棒的" />

            <ImageView
                android:id="@+id/img_img"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                tools:background="@mipmap/ic_launcher" />
        </LinearLayout>

        <TextView
            android:id="@+id/indexTv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_marginRight="6dp"
            android:background="@drawable/corners_point"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="哈哈哈哈啊哈啊哈啊啊哈啊啊哈啊哈啊啊哈啊哈啊" />

            <TextView
                android:id="@+id/msg_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                tools:text="哈哈哈哈啊哈啊哈" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
