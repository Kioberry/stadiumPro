<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/ft_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" />

        <RadioGroup
            android:id="@+id/main_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colortheme"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="2dp">

            <RadioButton
                android:id="@+id/main_task_rbtn"
                style="@style/main_rbtnStyle"
                android:drawableTop="@drawable/select_detail"
                android:text="Home" />

            <RadioButton
                android:id="@+id/main_find_rbtn"
                style="@style/main_rbtnStyle"
                android:drawableTop="@drawable/select_chart"
                android:text="Orders" />

            <RadioButton
                android:id="@+id/main_user_rbtn"
                style="@style/main_rbtnStyle"
                android:drawableTop="@drawable/select_me"
                android:text="Me" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>